{% macro createModal(title, id, include, footerInContent) %}
  <div
    class="modal modal-lg fade {{ (footerInContent|default(true)) ? 'modal-body-footer' : '' }}"
    id="{{ id|raw }}"
    tabindex="-1"
    role="dialog"
    aria-labelledby="{{ id|raw }}Label"
    aria-hidden="true"
  >
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="{{ id|raw }}Label">{{ title|raw }}</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        
        <div class="modal-body" id="modalContent">
          {% if not include %}
            <p class="text-center mbottom-0">Aguarde buscando dados...</p>
          {% else %}
            {% include include %}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
{% endmacro %}
